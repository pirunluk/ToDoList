<!--include header-->
<%- include('include/header')%>
<!--/include header-->

    <!--Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i>All Lists</a>
                </div>
            </div>

<!--add user form-->
            <!--form handling-->
            <form method="post" id="update_list">
                <div class="new_list">
                    <div class="form-group">
                        <label for="nameList">สิ่งที่ต้องทำ</label>
                        <input type="hidden" name="id" value="<%=list._id%>">
                        <input type="text" name="nameList" value="<%=list.nameList%>">
                    </div>
                    <div class="form-group">
                        <label for="dateList" >วันที่ต้องทำ</label>
                        <input type="text" name="dateList" value="<%=list.dateList%>">
                    </div>
                    <div class="form-group">
                        <label for="categoryList" >หมวดหมู่</label>
                        <input type="text" name="categoryList" value="<%=list.categoryList%>">
                    </div>

                    <div class="form-group-radio-statusList">
                        <label for="statusList" class="radio">สถานะ</label>
                        <label for="radioID0" class="radio">
                            <input type="radio" name="statusList" value="เสร็จ" id="radioID0" class="radio_input" <%=list.statusList=='เสร็จ'?'checked':''%>>
                            <div class="radio_radio">
                                <!--virtual element-->
                            </div>
                                เสร็จ
                            </label>
                        <label for="radioID1" class="radio">
                            <input type="radio" name="statusList" value="ยังไม่เสร็จ" id="radioID1" class="radio_input" <%=list.statusList=='ยังไม่เสร็จ'?'checked':''%>>
                            <div class="radio_radio">
                                <!--virtual element-->
                            </div>
                                ยังไม่เสร็จ
                            </label>
                    </div>
             
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
            <!--/form handling-->
<!--/add user form-->

